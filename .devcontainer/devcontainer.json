{
	"name": "ansible-dev-container-codespaces",
	"image": "quay.io/podman/hello:latest",
	"containerUser": "podman",
	"runArgs": [
		"--security-opt",
		"seccomp=unconfined",
		"--security-opt",
		"label=disable",
		"--cap-add=SYS_ADMIN",
		"--cap-add=SYS_RESOURCE",
		"--device",
		"/dev/fuse",
		"--security-opt",
		"apparmor=unconfined",
		"--userns=keep-id:uid=1000,gid=1000",
		"--hostname=ansible-dev-container"
	],
	"updateRemoteUserUID": true,
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.ansible"
			]
		}
	}
}